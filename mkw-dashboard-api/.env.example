# MKW Dashboard API Environment Variables

# Server
PORT=8000
DEBUG=false

# Database (use Railway's DATABASE_URL or your own)
DATABASE_URL=postgresql://user:password@host:port/database

# Discord OAuth (from your mkwstatsbot application in Discord Developer Portal)
DISCORD_CLIENT_ID=your_bot_application_id
DISCORD_CLIENT_SECRET=your_oauth2_client_secret
DISCORD_REDIRECT_URI=http://localhost:8000/api/auth/callback

# JWT (generate a random secret)
JWT_SECRET=your-random-secret-key-change-in-production

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3000

# CORS Origins (comma-separated if multiple)
CORS_ORIGINS=http://localhost:3000

# API Key for bot -> API communication (optional but recommended)
API_KEY=your-shared-secret-for-bot-communication
